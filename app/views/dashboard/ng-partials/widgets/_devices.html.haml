/ .widget-wrapper
.row
  .small-6.columns
    .row
      .small-12.columns
        .header-wrapper
          %h5 Software
    .row
      .small-12.columns
        .content-wrapper
          .alert-box.warning
            Click Here to Get the Latest Firmware (not real).
          .row
            .large-6.small-6.columns
              %label.left.inline Software Version
            .large-6.small-6.columns
              %label.right.inline xyz123
          .row
            .large-6.small-6.columns
              %label.left.inline Software Version
            .large-6.small-6.columns
              %label.right.inline xyz123
          .row
            .large-6.small-6.columns
              %label.left.inline Software Version
            .large-6.small-6.columns
              %label.right.inline xyz123


  .small-6.columns
    .row
      .small-12.columns
        .header-wrapper
          %h5 Add / Update
    .row
      .small-12.columns
        .content-wrapper
          %form{ng_submit: 'createDevice()'}
            %fieldset
              .row
                .large-12.columns
                  %label FarmBot Name *
                  %input{id: 'botname', placeholder: "Brocolli Overlord", type: "text", ng_model: 'form.name', required: true}/
              .row
                .large-6.columns
                  %label UUID *
                  %input{placeholder: "ad698900-2546-11e3-87fb-c560cb0ca47b", type: "text", ng_model: 'form.uuid', required: true}/
                .large-6.columns
                  %label Security Token *
                  %input{placeholder: "4bbd2jm242dl5wmimbwz4rvlu77m0a4i", type: "text", ng_model: 'form.token', required: true}/
              .row
                .large-12.columns
                  %button.green.button-like
                    {{ !!form._id ? "Update" : "Add" }} FarmBot
                  %button.gray.button-like{ng_if: '!!form._id', ng_click: 'refreshLogs()', type: 'button'}
                    Fetch Logs
/ sorry
%br
.row
  .small-12.columns
    .row
      .small-12.columns
        .header-wrapper
          %h5 Logs
    .row
      .small-12.columns
        .content-wrapper
          %table
            %thead
              %tr
                %th Time
                %th Data
                %th Coords
            %tbody
              %tr{'ng-repeat' => 'log in logs'}
                %td {{ log.timestamp | date:'MM/dd h:mma' }}
                %td {{ log.data || "?" }}
                %td {{ (log.X || '?') + ', ' + (log.Y || '?') + ', ' + (log.Z || '?') }}
