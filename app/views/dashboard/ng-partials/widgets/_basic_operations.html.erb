<div class="row">
  <div class="small-12 columns header-wrapper">
    <h5>Basic Operations</h5>
  </div>
</div>

<div class="row">
  <div class="content-wrapper">
    <div class="row">
      <div class="small-6 large-6 columns">
        <button class="full-width left-aligned blue-block margin no-radius" ng-click="addStep('move_abs')">MOVE ABSOLUTE<i class="fa fa-bars right"></i></button>
      </div>


      <div class="small-6 large-6 columns">
        <button class="full-width left-aligned green-block margin no-radius" ng-click="addStep('move_rel')">MOVE RELATIVE<i class="fa fa-bars right"></i></button>
      </div>
    </div>


    <div class="row">
      <div class="small-6 large-6 columns">
        <button class="full-width left-aligned orange-block margin no-radius" ng-click="addStep('pin_write')">WRITE PIN<i class="fa fa-bars right"></i></button>
      </div>


      <div class="small-6 large-6 columns">
        <button class="full-width left-aligned yellow-block margin no-radius" ng-click="addStep('pin_read')">READ PIN<i class="fa fa-bars right"></i></button>
      </div>
    </div>


    <div class="row">
      <div class="small-6 large-6 columns">
        <button class="full-width left-aligned purple-block margin no-radius" ng-click="addStep('move_rel')">TAKE PICTURE<i class="fa fa-bars right"></i></button>
      </div>


      <div class="small-6 large-6 columns">
        <button class="full-width left-aligned pink-block margin no-radius" ng-click="addStep('move_rel')">IF STATEMENT<i class="fa fa-bars right"></i></button>
      </div>
    </div>


    <div class="row">
      <div class="small-6 large-6 columns">
        <button class="full-width left-aligned gray-block margin no-radius" ng-click="addStep('wait')">WAIT<i class="fa fa-bars right"></i></button>
      </div>


      <div class="small-6 large-6 columns">
        <button class="full-width left-aligned red-block margin no-radius" ng-click="addStep('send_message')">SEND MESSAGE<i class="fa fa-bars right"></i></button>
      </div>
    </div>
  </div>
</div>
