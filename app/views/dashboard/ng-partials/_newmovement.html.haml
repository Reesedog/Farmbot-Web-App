.row
  .large-4.small-12.columns
    .row
      .large-12.small-12.columns
        .header-wrapper
          %h5 Move Relative
      .large-12.small-12.columns
        .content-wrapper
          %h6 Move Amount(mm)
          .row
            %button.x-small.button.radius.gray Manual
            %button.x-small.button.radius.gray{ng_click: 'setMultiplier(1)'} 1
            %button.x-small.button.radius.gray{ng_click: 'setMultiplier(10)'} 10
            %button.x-small.button.radius.gray{ng_click: 'setMultiplier(100)'} 100
            %button.x-small.button.radius.gray{ng_click: 'setMultiplier(1000)'} 1000
          .row
            / sorry. #shipit
            %table{style:'border: transparent;'}
              %tr
                %td
                %td
                  %directionbutton{direction: "up", axis: "y"}
                %td
                %td
                %td
                  %directionbutton{direction: "up", axis: "z"}
              %tr{style: 'background-color: transparent !important;'}
                %td
                  %directionbutton{direction: "up", axis: "x"}
                %td
                  %directionbutton{direction: "down", axis: "y"}
                %td
                  %directionbutton{direction: "down", axis: "x"}
                %td
                %td
                  %directionbutton{direction: "down", axis: "z"}
          .row
            .large-12.columns
              %button.tiny.expand.button.radius.red STOP
      .large-12.small-12.columns
        .header-wrapper
          %h5 Tool Control
      .large-12.small-12.columns
        .content-wrapper
          .row
            .large-6.small-6.columns
              %label.left.inline Vacuum Pump
            .large-6.small-6.columns
              %togglebutton{monitor: 'devices.current.pin8'}
          .row
            .large-6.small-6.columns
              %label.left.inline Water Pump
            .large-6.small-6.columns
              %togglebutton{monitor: 'devices.current.pin8'}
          .row
            .large-6.small-6.columns
              %label.left.inline LED
            .large-6.small-6.columns
              %togglebutton{monitor: 'devices.current.pin8'}
  .large-4.small-12.columns
    .row
      .large-12.small-12.columns
        .header-wrapper
          %h5 Move Absolute
      .large-12.small-12.columns
        .content-wrapper
          .row
            .large-4.small-4.columns
              %label.left.inline.shrink Gantry(X)
            .large-4.small-4.columns
              %input{:placeholder => "3.124m", :type => "text"}/
            .large-4.small-4.columns
              %button.xx-small.button.radius.gray HOME X
          .row
            .large-4.small-4.columns
              %label.left.inline.shrink Cross Slide(Y)
            .large-4.small-4.columns
              %input{:placeholder => "1.210m", :type => "text"}/
            .large-4.small-4.columns
              %button.xx-small.button.radius.gray HOME Y
          .row
            .large-4.small-4.columns
              %label.left.inline.shrink Tool Mount(Z)
            .large-4.small-4.columns
              %input{:placeholder => "0.893m", :type => "text"}/
            .large-4.small-4.columns
              %button.xx-small.button.radius.gray HOME Z
          .row
            .large-4.small-4.columns
              %button.tiny.expand.button.radius.red STOP
            .large-4.small-4.columns
              %button.tiny.button.radius.green GO
            .large-4.small-4.columns
              %button.xx-small.button.radius.gray HOME ALL
    .row
      .large-12.small-12.columns
        .header-wrapper
          %h5 Camera 1
      .large-12.small-12.columns
        %img{src: "http://108.90.200.9:8080/?action=stream", style: "width: 1080px; height: auto;"}

  .large-4.small-12.columns
    .row
      .large-12.small-12.columns
        .header-wrapper
          %h5 Device Status
      .large-12.small-12.columns
