!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    = favicon_link_tag 'favicon.png'
    %title= content_for?(:title) ? yield(:title) : "FarmBot"
    = stylesheet_link_tag "application"
    = csrf_meta_tags
  %body{'ng-app' => 'FarmBot'}
    %nav.top-bar{"data-topbar" => "", "ng-controller" => "NavbarController"}
      %ul.title-area
        %li.name
          %h1
            = link_to "Farmbot", root_path
        %li.toggle-topbar.menu-icon
          %a{href: "#"} Menu
      %section.top-bar-section
        %ul.left{"ng-if" => 'devices.list.length > 0'}
          %li.has-dropdown.not-click
            %a{href: "#"}
              Current device: {{ devices.current.name }}
            %ul.dropdown
              %li{"ng-repeat" => "dev in devices.list"}
                %a{ng_click: 'devices.current = dev'}
                  {{ dev.name }}
        %ul.left
          -if current_user
            %li{class: ("active" if current_page? page_path('#/settings'))}
              = link_to 'Control', '/dashboard#/movement'
            %li{class: ("active" if current_page? page_path('#/settings'))}
              = link_to 'Devices', '/dashboard#/settings'
          %li{class: ("active" if current_page? page_path('help'))}
            = link_to 'Help', page_path('help')
        %ul.right
          - if current_user
            %li.has-dropdown.not-click
              %a{href: "#"}
                = "Welcome #{current_user.name}!"
              %ul.dropdown
                %li
                  = link_to 'User Settings', edit_user_registration_path
                %li
                  = link_to 'Device Settings', '/dashboard#/devices'
                %li
                  = link_to "Sign out", destroy_user_session_path, :method => :delete
          - else
            %li
              =link_to "Register", new_user_registration_path, class: 'button'
            %li
              =link_to "Log In", new_user_session_path
    .container{style: 'margin: 10px;'}
      - if notice
        .alert-box.round{"onClick" => "hidden = true"}
          = notice
          %a.close ×
      - if alert
        .alert-box.alert.round{"onClick" => "hidden = true"}
          = alert
          %a.close ×
    .content
      = yield
      = javascript_include_tag "application"
